{
  "servers" : [
    {
      "host" : "bitcraft-fileserver",
      "user" : "sonny",
      "backupSource" : "/swp/",
      "backupDestination" : "/backupspace/bitcraft-fileserver/",
      "command" : "rsync",
      "arguments" : "-ravzX --delete",
      "retentionPeriod" : "3",
      "remoteScript" : "sudo bash /swp/remoteScript.sh",
      "postExec" : "sudo rm -f /swp/*.tar.gz"
    }
  ]
}