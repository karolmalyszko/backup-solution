{
  "servers" : [
    {
      "host" : "bitcraft-sentry",
      "user" : "sonny",
      "backupSource" : "/var/lib/docker/volumes/",
      "backupDestination" : "/backupspace/bitcraft-sentry/",
      "command" : "rsync",
      "arguments" : "-ravzX --delete",
      "retentionPeriod" : "3"
    },
    {
      "host" : "bitcraft-sentry",
      "user" : "sonny",
      "backupSource" : "/etc/sentry/",
      "backupDestination" : "/backupspace/bitcraft-sentry/sentry/",
      "command" : "rsync",
      "arguments" : "-ravzX --delete"
    },
    {
      "host" : "bitcraft-sentry",
      "user" : "sonny",
      "backupSource" : "/etc/sonarqube/",
      "backupDestination" : "/backupspace/bitcraft-sentry/sonar/",
      "command" : "rsync",
      "arguments" : "-ravzX --delete"
    }
  ]
}